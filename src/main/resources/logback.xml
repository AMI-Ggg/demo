	<appender name="demo_mybatis_log" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>/mnt/logs/demo-mybatis.log</File>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{-1} - %msg%n</pattern>
			<charset>UTF-8</charset>
		</encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>/mnt/logs/demo-mybatis.%d{yyyy-MM-dd}.log</FileNamePattern>
		</rollingPolicy>
	</appender>

	<appender name="all_log" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>/mnt/logs/demo-all.log</File>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{-1} - %msg%n</pattern>
			<charset>UTF-8</charset>
		</encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>/mnt/logs/demo-all.%d{yyyy-MM-dd}.log</FileNamePattern>
		</rollingPolicy>
	</appender>

	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<charset>UTF-8</charset>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %logger{-1} - %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="org.apache.ibatis" />
	<logger name="org.springframework" />
<!--	<logger name="org.apache.zookeeper" level="WARN" />-->
	<logger name="com.Pipi.demo.dao" additivity="false" level="DEBUG">
		<appender-ref ref="demo_mybatis_log" />
	</logger>
<!--	<logger name="com.alibaba" additivity="false" level="DEBUG">-->
<!--		<appender-ref ref="ec_helper_dubbo_log" />-->
<!--	</logger>-->
	<logger name="com.Pipi.demo" additivity="true" level="DEBUG">
		<appender-ref ref="demo_log" />
		<appender-ref ref="demo_warn_log" />
	</logger>
	<logger name="java.sql" level="DEBUG" />
	<!-- <logger name="org.apache.ibatis" level="DEBUG" /> -->
	<logger name="com.ibatis" level="DEBUG" />
	
	<root level="DEBUG">
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="all_log" />
	</root>
</configuration>